#coding:utf-8

<%= stylesheet_link_tag "application", :media => "all" %>

<div class = "site_header" >
    <div class = "logo">
        <h2>日報アプリケーション</h2>
    </div>
    <%if signed_in? %>
        <div class = "log_in_user">
            <% if Rails.env.development? %>
                <!-- 開発時に表示 -->
                userID:[<%="#{current_user.id}" %> ]
                Admin:[<%="#{current_user.admin?}" %> ]
                <br>
            <% end%>
            ユーザーの名前[ <%="#{current_user.name}"%> ]
            E-mail:[<%="#{current_user.email}"%>]

            <div class = "horizontal_controller">
                <div class = "horizontal_left_button">
                    <%= button_to "Create Report", new_report_path, method: :get%>
                </div>
                <div class = "horizontal_left_button">
                    <%= button_to "月報", mounthreport_path%>
                </div>
                <% if current_user.admin? %>
                    <%= link_to "Report List(Admin)", reportslist_path%>
                    <%= link_to "User list(Admin)", users_path%>
                <% end %>
                <br>
            </div>

            <div class = "horizontal_controller">
                <div class = "horizontal_right_button">
                    <%= button_to "ユーザー情報", your_page_path%>
                </div>
                <div class = "horizontal_right_button">

                    <%= button_to "Sign out", destroy_user_session_path, :method => :delete %>
                </div>
            </div>
        </div>
    <% else %>
        サインインしてください<br>
    <% end %>
    <hr>
</div>